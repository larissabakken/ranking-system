generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Rank {
  BRONZE
  SILVER
  GOLD
  PLATINUM
  DIAMOND
  MASTER
  GRANDMASTER
  TOP500
}

enum Performance {
  LEVELUP
  LEVELDOWN
  DRAW
}

enum Role {
  TANK
  DAMAGE
  SUPPORT
  FLEX
}

model Task {
  id String @id @default(cuid())
  rank Rank
  performance Performance
  role Role

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  seasonId String?
  season Season? @relation(fields: [seasonId], references: [id])

  @@map("tasks")
}

model Season {
  id String @id @default(cuid())
  season String @unique
  description String
  initialRank Rank
  finalRank Rank
  seasonEnd DateTime

  tasks Task[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("seasons")
}